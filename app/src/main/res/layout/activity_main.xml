<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.obsidion.markus.startpc.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START (0,5sek)"
        android:id="@+id/button"
        android:longClickable="false"
        android:onClick="start1click"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KILL (10sek)"
        android:id="@+id/button3"
        android:onClick="start10click"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ergebnis:"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:visibility="visible"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/webView"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button3" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ext./int. Verbindung"
        android:id="@+id/switch3"
        android:onClick="onCheckedChanged"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Externer Modus:"
        android:id="@+id/textView4"
        android:layout_alignParentStart="true"
        android:textColor="#5d5d5d"
        android:paddingTop="9px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="obsidion.ns01.biz"
        android:id="@+id/textView5"
        android:textColor="#5d5d5d"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CENTRAL"
        android:id="@+id/textView"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:paddingTop="20px" />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/webView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Momentaner PC-Status:"
        android:id="@+id/textView3"
        android:layout_above="@+id/webView2"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />
</RelativeLayout>
